code {
    padding: 2px 4px;
    border-radius: 4px;
    margin-right: 2px;
    margin-left: 2px;
    background-color: rgba(27, 31, 35, 0.05);
    font-family: "Operator Mono", Consolas, Monaco, Menlo, monospace;
    word-break: break-all;
    color: #9c27b0;
}

.post-copyright, .followme {
    border-left: 3px solid #009688;
}

.post-tags i {
    color: #009688;
}

.post-body h2 {
  display: inline-block;
  font-weight: bold;
  background: black;
  color: #ffffff;
  padding: 5px 10px 5px;
  margin-right: 3px;
  font-size: 1.2em;
}

p > a{
  color: #009688;
  border-bottom: none;
  border-bottom: 1px solid #009688;
  &:hover {
    color: #9c27b0;
    border-bottom: none;
    border-bottom: 1px solid #9c27b0;
  }
}

.post-body p > u {
    display: inline;
    padding: 0.2em 0.6em 0.3em;
    font-size: 80%;
    font-weight: bold;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 5px;
    background-color: #009688;
    text-decoration:none;
}

.post-body p > strong {
    color:#009688;
}


blockquote {
  font-size:15px;
}

.sidebar-nav .sidebar-nav-active {
    border-bottom-color: #a7ffeb;
    color: #a7ffeb;
}
.post-toc .nav .active > a {
    border-bottom-color: #a7ffeb;
    color: #a7ffeb;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
  font-size: 14px;
  margin: 0 0 20px 0;
  width: 80%;
  margin-left:10%;
  margin-right:10%;
}

td, th {
    padding-top: 3px;
    padding-bottom: 3px;
}

.category_1 details > summary {
    background-color: white;
    color: black;
    cursor: pointer;
}

details > summary {
  vertical-align: middle;
  background-color: black;
  color: white;
  font-size: 15px;
  cursor: pointer;
  padding: .3em 1em;
  margin: .2em;
  border-radius: 7px;
  display: inline-block;
}

details {
  display: inline-block;
}

details[open]  {
  display: block;
}


.posts-expand.index .post-title, .posts-expand.index .post-meta {
    text-align: center;
}

img {
  vertical-align: middle;
}

.posts-expand .post-body img {
    margin-left: auto;
}

.posts-expand .post-tags, .pagination, .post-button, .footer-inner  {
    text-align: center;
}

.menu .menu-item .badge {
    background: #4db6ac;
    border-radius: 10px;
    color: #fff;
    padding: 3px;
}
